<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ContextMenu x:Key="EntryMenu">
        <MenuItem
            Header="最新の情報に更新"
            Command="{Binding Refresh}"/>

        <MenuItem
            Header="全ての記事を既読に設定"
            Command="{Binding ReadAll}"/>

        <Separator/>

        <MenuItem 
            Header="キャッシュをクリア"
            Command="{Binding Reset}"/>

        <MenuItem
            Header="削除"
            Command="{Binding Remove}"/>
        
        <MenuItem
            Header="名前の変更"
            Command="{Binding Rename}"/>

        <Separator/>
        
        <MenuItem
            Header="プロパティ"
            Command="{Binding Property}"/>
    </ContextMenu>
</ResourceDictionary>