<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
    xmlns:xu="clr-namespace:Cube.Xui"
    xmlns:xb="clr-namespace:Cube.Xui.Behaviors"
    xmlns:my="clr-namespace:Cube.Net.App.Rss.Reader">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Themes/Components.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!--
        Customize for TreeViewItem
    -->
    
    <Style TargetType="TreeViewItem" BasedOn="{StaticResource {x:Type TreeViewItem}}">
        <Setter Property="IsExpanded" Value="{Binding Expanded, Mode=TwoWay}"/>
        <Setter Property="xu:ExpandIcon.Visibility" Value="Collapsed"/>
    </Style>

    <!--
        ToolTip for RSS entry
    -->
    
    <ToolTip x:Key="RssEntryToolTip">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{Binding Title}"/>
            <TextBlock Text="{Binding Count, StringFormat=' ({0})'}"/>
        </StackPanel>
    </ToolTip>
    
    <!--
        TreeViewItem for RssCategory
    -->
    
    <HierarchicalDataTemplate DataType="{x:Type my:RssCategory}" ItemsSource="{Binding Items}">
        <StackPanel
            Margin="2,4,0,4"
            Orientation="Horizontal"
            ToolTip="{StaticResource RssEntryToolTip}">
            <TextBlock
                Text="&#xf101;"
                Style="{StaticResource IconStyle}"
                Margin="0,2,6,0"/>
            <TextBox
                Text="{Binding Title}"
                Foreground="{StaticResource MainTextBrush}"
                FontSize="12"
                FontWeight="Bold"
                Padding="2">
                <i:Interaction.Behaviors>
                    <xb:EditMode Value="{Binding Editing, Mode=TwoWay}"/>
                </i:Interaction.Behaviors>
            </TextBox>
            <TextBlock
                Text="{Binding Count, StringFormat=({0})}"
                Foreground="{StaticResource MainTextBrush}"
                FontSize="12"
                FontWeight="Bold"
                Padding="2"/>
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="PreviewMouseRightButtonDown">
                    <ei:ChangePropertyAction
                        PropertyName="IsSelected"
                        Value="true"
                        TargetObject="{Binding RelativeSource={RelativeSource
                        Mode=FindAncestor, AncestorType=TreeViewItem}}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </StackPanel>
    </HierarchicalDataTemplate>

    <!--
        TreeViewItem for RssEntry
    -->
    
    <HierarchicalDataTemplate DataType="{x:Type my:RssEntry}">
        <StackPanel
            Margin="2,0,0,0"
            Orientation="Horizontal"
            ToolTip="{StaticResource RssEntryToolTip}">
            <TextBlock
                Text="&#xf0f6;"
                Style="{StaticResource IconStyle}"
                Margin="0,4,6,0"/>
            <TextBox
                Text="{Binding Title}"
                Foreground="{StaticResource MainTextBrush}"
                FontSize="12"
                Margin="0,2,0,2"
                Padding="2">
                <i:Interaction.Behaviors>
                    <xb:EditMode Value="{Binding Editing, Mode=TwoWay}"/>
                </i:Interaction.Behaviors>
            </TextBox>
            <TextBlock
                Text="{Binding Count, StringFormat=({0})}"
                Foreground="{StaticResource MainTextBrush}"
                FontSize="12"
                Margin="0,2,0,2"
                Padding="2"/>
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="PreviewMouseRightButtonDown">
                    <ei:ChangePropertyAction
                        PropertyName="IsSelected"
                        Value="true"
                        TargetObject="{Binding RelativeSource={RelativeSource
                        Mode=FindAncestor, AncestorType=TreeViewItem}}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </StackPanel>
    </HierarchicalDataTemplate>
</ResourceDictionary>