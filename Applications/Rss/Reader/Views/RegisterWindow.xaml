<Window
    x:Class="Cube.Net.App.Rss.Reader.RegisterWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xt="clr-namespace:Cube.Xui.Triggers"
    mc:Ignorable="d"
        
    Title="新しい Web サイトを登録"
    Height="210"
    Width="400"
    Background="#FFFFFFFF"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    Topmost="True"
    WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Themes/Colors.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <i:Interaction.Triggers>
        <xt:DialogTrigger Messenger="{Binding Messenger}">
            <xt:DialogAction/>
        </xt:DialogTrigger>
        
        <xt:CloseTrigger Messenger="{Binding Messenger}">
            <xt:CloseAction/>
        </xt:CloseTrigger>
    </i:Interaction.Triggers>
    
    <Grid FocusManager.FocusedElement="{Binding ElementName=UrlTextBox}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <StackPanel
            Orientation="Vertical"
            VerticalAlignment="Center"
            Margin="20,0,20,0">
            <TextBlock
                Text="新しく登録する Web サイトの URL を入力して下さい。"
                Margin="0,0,0,12"/>
            <TextBox
                Text="{Binding Url.Value, UpdateSourceTrigger=PropertyChanged}"
                x:Name="UrlTextBox"
                VerticalAlignment="Center"
                Padding="3"/>
        </StackPanel>
        
        <StackPanel
            Orientation="Horizontal"
            FlowDirection="RightToLeft"
            Background="{StaticResource MainBackgroundBrush}"
            Grid.Row="1">
            <Button
                Content="キャンセル"
                Command="{Binding Close}"
                Margin="20,0,0,0"
                Width="125"
                Height="30"/>
            <Button
                Content="登録"
                Command="{Binding Execute}"
                IsDefault="True"
                Margin="8,0,0,0"
                Width="125"
                Height="30"
                Style="{StaticResource AccentButton}"/>
        </StackPanel>
    </Grid>
</Window>
