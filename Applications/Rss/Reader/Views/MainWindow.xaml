<Window
    x:Class="Cube.Net.App.Rss.Reader.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dd="urn:gong-wpf-dragdrop"
    xmlns:xb="clr-namespace:Cube.Xui.Behaviors"
    xmlns:my="clr-namespace:Cube.Net.App.Rss.Reader"
    mc:Ignorable="d"
        
    Title="CubeRSS Reader"
    Icon="pack://application:,,,/App.ico"
    FontFamily="Meiryo UI"
    Width="800"
    Height="600"
    Background="#FFF1F1F1">
    <Window.DataContext>
        <my:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Views/MainContextMenu.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles/MainStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <i:Interaction.Triggers>
        <my:AddViewModelTrigger>
            <my:ShowAddWindowAction/>
        </my:AddViewModelTrigger>
    </i:Interaction.Triggers>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Style="{StaticResource HeaderStyle}" Grid.Row="0"/>
        <!-- Header -->

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="200" Width="200"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="32"/>
                </Grid.RowDefinitions>

                <!-- Categories and Entries -->
                <TreeView
                    ItemsSource="{Binding Items}"
                    x:Name="RssTreeView"
                    Style="{StaticResource EntriesStyle}"
                    ContextMenu="{StaticResource MainContextMenu}"
                    Width="Auto"
                    dd:DragDrop.IsDragSource="True"
                    dd:DragDrop.IsDropTarget="True"
                    dd:DragDrop.DropHandler="{Binding DropTarget}">
                    <TreeView.Resources>
                        <!-- Category -->
                        <HierarchicalDataTemplate DataType="{x:Type my:RssCategory}" ItemsSource="{Binding Items}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xf07b;"
                                       FontFamily="{StaticResource FontAwesome}"
                                       FontSize="14"
                                       Margin="0,2,8,0"/>
                                <TextBlock Text="{Binding Title}"/>
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="PreviewMouseRightButtonDown">
                                        <ei:ChangePropertyAction
                                        PropertyName="IsSelected"
                                        Value="true"
                                        TargetObject="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=TreeViewItem}}"
                                    />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </StackPanel>
                        </HierarchicalDataTemplate>
                        <!-- Category -->

                        <!-- Entry -->
                        <HierarchicalDataTemplate DataType="{x:Type my:RssEntry}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xf0f6;"
                                       FontFamily="{StaticResource FontAwesome}"
                                       FontSize="14"
                                       Margin="0,2,8,0"/>
                                <TextBlock Text="{Binding Title}" Margin="0,2,0,2"/>
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="PreviewMouseRightButtonDown">
                                        <ei:ChangePropertyAction
                                        PropertyName="IsSelected"
                                        Value="true"
                                        TargetObject="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=TreeViewItem}}"
                                    />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </StackPanel>
                        </HierarchicalDataTemplate>
                        <!-- Entry -->
                    </TreeView.Resources>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectedItemChanged">
                            <i:InvokeCommandAction
                            Command="{Binding SelectEntry}"
                            CommandParameter="{Binding SelectedItem, ElementName=RssTreeView}"
                        />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </TreeView>
                <!-- Category and Entries -->

                <!-- NewFeed -->
                <Button Command="{Binding Add}"
                    Content="＋ 新しいフィード"
                    Style="{StaticResource NewFeedStyle}"
                    Grid.Row="1"/>
                <!-- NewFeed -->
            </Grid>
            <!-- Sidebar -->

            <GridSplitter
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Stretch"
                Background="#FFD7D7D7"
                Width="2"
                Panel.ZIndex="1"
            />

            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition MinHeight="100" Height="200"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Feeds -->
                <ListView
                    ItemsSource="{Binding Feed.Value.UnreadItems}"
                    Style="{StaticResource FeedsStyle}"
                    ItemContainerStyle="{StaticResource FeedsItemStyle}"
                    SelectionMode="Single"
                    Height="Auto"
                    Grid.Row="0">
                    
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding PublishTime, StringFormat=MM/dd hh:mm}"
                                   Foreground="Gray"
                                   Margin="0,0,12,0"/>
                                <TextBlock Text="{Binding Title}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <i:Interaction.Behaviors>
                        <xb:ListBoxSelectItems Command="{Binding SelectArticle}"/>
                    </i:Interaction.Behaviors>
                </ListView>
                <!-- Feeds -->

                <GridSplitter
                    Grid.Row="1"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Background="#FFD7D7D7"
                    Height="2"
                />
                
                <!-- WebBrowser -->
                <Border Style="{StaticResource BrowserBorderStyle}" Grid.Row="2">
                    <WebBrowser>
                        <i:Interaction.Behaviors>
                            <xb:WebDocument Text="{Binding Content.Value}"/>
                        </i:Interaction.Behaviors>
                    </WebBrowser>
                </Border>
                <!-- WebBrowser -->
            </Grid>
        </Grid>

        <!-- Footer -->
        <StatusBar Style="{StaticResource FooterStyle}" Grid.Row="2">
            <StatusBarItem Content="Ready"/>
            <StatusBarItem Content="{Binding LastChecked.Value}" HorizontalAlignment="Right"/>
        </StatusBar>
        <!-- Footer -->
    </Grid>
</Window>
